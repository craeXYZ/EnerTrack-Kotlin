<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EnerTrack"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <!-- Jadikan SplashActivity sebagai LAUNCHER -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EnerTrack"> <!-- Ganti tema jika perlu (misal tema khusus splash) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pastikan MainActivity exported="false" dan HAPUS intent-filter LAUNCHER darinya -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.EnerTrack">
        </activity>

        <activity
            android:name=".ui.auth.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="false" />

    </application>

</manifest>