<resources>
    <!-- Base theme untuk Dark Mode -->
    <style name="Base.Theme.EnerTrack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Tidak perlu ubah apa-apa di base -->
    </style>

    <style name="Theme.EnerTrack" parent="Base.Theme.EnerTrack">
        <!-- ============================================ -->
        <!-- COLOR PALETTE (DARK MODE FIXED) -->
        <!-- ============================================ -->

        <!-- WARNA UTAMA -->
        <item name="colorPrimary">@color/primary_accent_dark</item>
        <item name="colorOnPrimary">@color/mirage</item>

        <!-- CONTAINER -->
        <item name="colorPrimaryContainer">@color/dark_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/dark_on_primary_container</item>

        <!-- WARNA SEKUNDER -->
        <item name="colorSecondary">@color/primary_accent_dark</item>
        <item name="colorOnSecondary">@color/mirage</item>
        <item name="colorSecondaryContainer">@color/dark_surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/text_primary_dark</item>

        <!-- BACKGROUND & SURFACE -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>

        <!-- TEXT COLORS -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- OUTLINE -->
        <item name="colorOutline">@color/outline_dark</item>
        <item name="colorOutlineVariant">@color/neutral_700</item>

        <!-- STATUS BAR -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- ============================================ -->
    <!-- WIDGET STYLES DEFINITION -->
    <!-- ============================================ -->

    <!-- DEFINISI: Widget.EnerTrack.CardView (Style Induk untuk Card) -->
    <!-- Wajib ada biar nggak error "Resource not found" -->
    <style name="Widget.EnerTrack.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/dark_surface</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/neutral_800</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.EnerTrack.Medium</item>
    </style>

    <!-- Style CardView Summary (Turunan dari Card Default) -->
    <style name="Widget.EnerTrack.SummaryCard" parent="Widget.EnerTrack.CardView">
        <!-- Sama persis kayak parentnya -->
    </style>

    <!-- Style CardView History -->
    <style name="Widget.EnerTrack.HistoryCard" parent="Widget.EnerTrack.CardView">
    </style>

    <!-- Style BottomSheet -->
    <style name="ThemeOverlay.EnerTrack.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:colorBackground">@color/dark_surface</item>
        <item name="colorSurface">@color/dark_surface</item>
    </style>

    <style name="ShapeAppearance.EnerTrack.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- TEXT STYLES -->
    <style name="TextAppearance.EnerTrack.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.EnerTrack.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="TextAppearance.EnerTrack.Label" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_disabled_dark</item>
    </style>

</resources>