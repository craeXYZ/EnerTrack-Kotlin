<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ui.profile.ThemeSettingsFragment">

    <!-- HEADER CUSTOM (Biar bisa ganti icon back) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_theme"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <!-- INI DIA TOMBOL BACK CUSTOM KAMU -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/text_primary"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Appearance"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_vertical" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Display Mode"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"/>

            <RadioGroup
                android:id="@+id/radio_group_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Light Mode"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:paddingVertical="12dp"/>

                <RadioButton
                    android:id="@+id/radio_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dark Mode"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:paddingVertical="12dp"/>

                <RadioButton
                    android:id="@+id/radio_system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="System Default"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:paddingVertical="12dp"/>

            </RadioGroup>

        </LinearLayout>
    </ScrollView>
</LinearLayout>