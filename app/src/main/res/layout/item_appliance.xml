<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F9FAFB"
    app:cardCornerRadius="10dp"
    app:strokeWidth="0dp"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_appliance_name"
            style="@style/TextAppearance.EnerTrack.Body"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_edit"
            tools:text="Smart TV 42 inch" />

        <TextView
            android:id="@+id/tv_appliance_details"
            style="@style/TextAppearance.EnerTrack.Label"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_appliance_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Samsung • Entertainment"/>

        <TextView
            android:id="@+id/tv_appliance_specs"
            style="@style/TextAppearance.EnerTrack.Label"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_appliance_details"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="120W • 5h/day • Qty: 1"/>

        <TextView
            android:id="@+id/tv_appliance_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/mainBlue"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_appliance_specs"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Daily: 0.60 kWh (Est. Rp 867)"/>

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_trash"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@android:color/holo_red_dark"/>

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:tint="@color/mainBlue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>