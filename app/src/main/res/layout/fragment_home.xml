<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".ui.home.HomeFragment">

    <!-- Tambahan: Sebaiknya dibungkus ScrollView jika konten melebihi tinggi layar -->
    <!-- Tapi sesuai request, kita padatkan margin-nya saja di sini -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- HEADER -->
        <!-- UPDATE: Margin atas dikurangi biar naik -->
        <TextView
            style="@style/TextAppearance.EnerTrack.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Energy Dashboard" />

        <!-- UPDATE: Margin bawah dikurangi biar kartu summary naik -->
        <TextView
            style="@style/TextAppearance.EnerTrack.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Overview &amp; daily summary" />

        <!-- ====================================================== -->
        <!-- KARTU 1: SUMMARY (DIBUAT PUTIH BERSIH)                 -->
        <!-- Perubahan: Elevation 0dp, Tambah Stroke (Garis Tepi)   -->
        <!-- ====================================================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/neutral_200"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Today's Consumption -->
                <LinearLayout
                    android:id="@+id/layout_summary_today"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_summary_today_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_energy"
                        app:tint="@color/primary_accent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_summary_today_title"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Today"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_summary_today_value"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        tools:text="5.72" />

                    <TextView
                        android:id="@+id/tv_summary_today_unit"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kWh"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/neutral_200" />

                <!-- This Week -->
                <LinearLayout
                    android:id="@+id/layout_summary_week"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_summary_week_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/primary_accent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_summary_week_title"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="This Week"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_summary_week_value"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        tools:text="40.1" />

                    <TextView
                        android:id="@+id/tv_summary_week_unit"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kWh"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/neutral_200" />

                <!-- Est. Cost -->
                <LinearLayout
                    android:id="@+id/layout_summary_cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_summary_cost_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_money"
                        app:tint="@color/primary_accent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_summary_cost_title"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Est. Cost"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_summary_cost_value"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        tools:text="5.250" />

                    <TextView
                        android:id="@+id/tv_summary_cost_unit"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ====================================================== -->
        <!-- KARTU 2: ANALYTICS (DIBUAT PUTIH BERSIH)               -->
        <!-- Perubahan: Elevation 0dp, Tambah Stroke (Garis Tepi)   -->
        <!-- UPDATE: Margin Top dikurangi jadi 12dp biar lebih rapet -->
        <!-- ====================================================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/neutral_200"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_chart_title"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Weekly Usage Overview"
                        android:textColor="@color/text_primary" />

                    <Button
                        android:id="@+id/btn_view_more_analytics"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="View More"
                        android:textColor="@color/primary_accent"
                        app:icon="@drawable/ic_arrow_right"
                        app:iconTint="@color/primary_accent"
                        app:iconGravity="end"
                        android:paddingEnd="0dp"
                        android:paddingStart="8dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_chart_subtitle"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="See how your energy usage changes this week."
                    android:textColor="@color/text_secondary" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.db.williamchart.view.BarChartView
                        android:id="@+id/chart_weekly"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:visibility="gone"
                        app:chart_barsColor="@color/primary_accent"
                        app:chart_labelsSize="12sp"
                        app:chart_labelsColor="@color/text_secondary"
                        app:chart_axis="xy"
                        app:chart_spacing="16dp"
                        app:chart_barsRadius="4dp"
                        tools:visibility="visible"/>

                    <ProgressBar
                        android:id="@+id/progress_bar_chart_weekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_no_chart_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="No usage data for this week yet."
                        android:textColor="@color/text_secondary"
                        android:visibility="gone" />

                </FrameLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- RECENT ACTIVITY (Margin top sudah 8dp, aman) -->
        <LinearLayout
            android:id="@+id/layout_recent_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Recent Activity"
                    android:textColor="@color/text_primary" />

                <Button
                    android:id="@+id/btn_view_all"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="View All"
                    android:textColor="@color/primary_accent" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_recent_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_recent_history" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_no_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="No recent activity to show."
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>