<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".ui.home.HomeFragment">

    <!-- ScrollView DIHAPUS sesuai permintaan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- ====================================================== -->
        <!-- SEKSI 1: SUMMARY CARDS (DIUBAH JADI 1 KARTU)         -->
        <!-- ====================================================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Konten 1: Today's Consumption -->
                <LinearLayout
                    android:id="@+id/layout_summary_today"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_summary_today_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_energy"
                        app:tint="@color/primary_accent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_summary_today_title"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Today"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_summary_today_value"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        tools:text="5.72" />

                    <TextView
                        android:id="@+id/tv_summary_today_unit"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kWh"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- Divider Vertikal -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/neutral_200" /> <!-- neutral_200 dari colors.xml lama -->

                <!-- Konten 2: This Week -->
                <LinearLayout
                    android:id="@+id/layout_summary_week"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_summary_week_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/primary_accent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_summary_week_title"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="This Week"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_summary_week_value"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        tools:text="40.1" />

                    <TextView
                        android:id="@+id/tv_summary_week_unit"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kWh"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- Divider Vertikal -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/neutral_200" />

                <!-- Konten 3: Est. Cost -->
                <LinearLayout
                    android:id="@+id/layout_summary_cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_summary_cost_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_money"
                        app:tint="@color/primary_accent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_summary_cost_title"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Est. Cost"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_summary_cost_value"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        tools:text="5.250" />

                    <TextView
                        android:id="@+id/tv_summary_cost_unit"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ====================================================== -->
        <!-- SEKSI 2: MINI ANALYTICS (BARU DITAMBAH)              -->
        <!-- ====================================================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_chart_title"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Weekly Usage Overview"
                        android:textColor="@color/text_primary" />

                    <!-- Ini tombol "View More" kamu -->
                    <Button
                        android:id="@+id/btn_view_more_analytics"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="View More"
                        android:textColor="@color/primary_accent"
                        app:icon="@drawable/ic_arrow_right"
                        app:iconTint="@color/primary_accent"
                        app:iconGravity="end"
                        android:paddingEnd="0dp"
                        android:paddingStart="8dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_chart_subtitle"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="See how your energy usage changes this week."
                    android:textColor="@color/text_secondary" />

                <!-- ====================================================== -->
                <!--           INI BAGIAN YANG DIPERBAIKI (1/2)           -->
                <!-- ====================================================== -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.db.williamchart.view.BarChartView
                        android:id="@+id/chart_weekly"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:visibility="gone"
                        app:chart_barsColor="@color/primary_accent"
                        app:chart_labelsSize="12sp"
                        app:chart_labelsColor="@color/text_secondary"
                        app:chart_axis="xy"
                        app:chart_spacing="16dp"
                        app:chart_barsRadius="4dp"
                        tools:visibility="visible"/>

                    <ProgressBar
                        android:id="@+id/progress_bar_chart_weekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <!-- ====================================================== -->
                    <!--           INI BAGIAN YANG DIPERBAIKI (2/2)           -->
                    <!-- ====================================================== -->
                    <TextView
                        android:id="@+id/tv_no_chart_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="No usage data for this week yet."
                        android:textColor="@color/text_secondary"
                        android:visibility="gone" />

                </FrameLayout>
                <!-- ====================================================== -->
                <!--                YANG DIHAPUS (2/2)                    -->
                <!-- Placeholder-nya dihapus karena sudah ada ProgressBar -->
                <!-- ====================================================== -->

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- ====================================================== -->
        <!-- SEKSI 3: RECENT ACTIVITY (SUDAH ADA, TIDAK DIUBAH)   -->
        <!-- ====================================================== -->
        <LinearLayout
            android:id="@+id/layout_recent_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Recent Activity"
                    android:textColor="@color/text_primary" />

                <Button
                    android:id="@+id/btn_view_all"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="View All"
                    android:textColor="@color/primary_accent" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_recent_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_recent_history" />
        </LinearLayout>

        <!-- tv_no_activity dibalikin lagi, tapi di luar RecyclerView -->
        <TextView
            android:id="@+id/tv_no_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="No recent activity to show."
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

