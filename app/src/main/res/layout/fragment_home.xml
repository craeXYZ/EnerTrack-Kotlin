<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.home.HomeFragment">

    <!-- Background Otomatis ikut Tema -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="80dp">

            <!-- HEADER -->
            <TextView
                style="@style/TextAppearance.EnerTrack.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Energy Dashboard" />

            <TextView
                style="@style/TextAppearance.EnerTrack.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Overview &amp; daily summary" />

            <!-- ====================================================== -->
            <!-- KARTU 1: SUMMARY                                       -->
            <!-- AMAN: Hapus style custom, pakai atribut langsung biar NO ERROR -->
            <!-- ====================================================== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <!-- cardBackgroundColor="?attr/colorSurface" -> Akan jadi Putih (Light) atau Abu Gelap (Dark) otomatis -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Today's Consumption -->
                    <LinearLayout
                        android:id="@+id/layout_summary_today"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_summary_today_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_energy"
                            app:tint="?attr/colorPrimary"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tv_summary_today_title"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Today"
                            android:textColor="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/tv_summary_today_value"
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="5.72" />

                        <TextView
                            android:id="@+id/tv_summary_today_unit"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kWh"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8dp"
                        android:background="?attr/colorOutline" />

                    <!-- This Week -->
                    <LinearLayout
                        android:id="@+id/layout_summary_week"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_summary_week_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="?attr/colorPrimary"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tv_summary_week_title"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="This Week"
                            android:textColor="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/tv_summary_week_value"
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="40.1" />

                        <TextView
                            android:id="@+id/tv_summary_week_unit"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kWh"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8dp"
                        android:background="?attr/colorOutline" />

                    <!-- Est. Cost -->
                    <LinearLayout
                        android:id="@+id/layout_summary_cost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_summary_cost_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_money"
                            app:tint="?attr/colorPrimary"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tv_summary_cost_title"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Est. Cost"
                            android:textColor="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/tv_summary_cost_value"
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="5.250" />

                        <TextView
                            android:id="@+id/tv_summary_cost_unit"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp"
                            android:textColor="?android:attr/textColorSecondary" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ====================================================== -->
            <!-- KARTU 2: ANALYTICS                                     -->
            <!-- AMAN: Hapus style custom, pakai atribut langsung -->
            <!-- ====================================================== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_chart_title"
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Weekly Usage Overview"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary" />

                        <!-- Button TextButton otomatis ambil warna Primary (Biru Terang) -->
                        <Button
                            android:id="@+id/btn_view_more_analytics"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="View More"
                            app:icon="@drawable/ic_arrow_right"
                            app:iconGravity="end"
                            android:paddingEnd="0dp"
                            android:paddingStart="8dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_chart_subtitle"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="See how your energy usage changes this week."
                        android:textColor="?android:attr/textColorSecondary" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <com.db.williamchart.view.BarChartView
                            android:id="@+id/chart_weekly"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:visibility="gone"
                            app:chart_barsColor="?attr/colorPrimary"
                            app:chart_labelsSize="12sp"
                            app:chart_labelsColor="?android:attr/textColorSecondary"
                            app:chart_axis="xy"
                            app:chart_spacing="16dp"
                            app:chart_barsRadius="4dp"
                            tools:visibility="visible"/>

                        <ProgressBar
                            android:id="@+id/progress_bar_chart_weekly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            tools:visibility="visible"/>

                        <TextView
                            android:id="@+id/tv_no_chart_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="No usage data for this week yet."
                            android:textColor="?android:attr/textColorSecondary"
                            android:visibility="gone" />

                    </FrameLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- RECENT ACTIVITY -->
            <LinearLayout
                android:id="@+id/layout_recent_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Recent Activity"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <Button
                        android:id="@+id/btn_view_all"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="View All" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_recent_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_recent_history" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_no_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="No recent activity to show."
                android:textAlignment="center"
                android:textColor="?android:attr/textColorSecondary"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>