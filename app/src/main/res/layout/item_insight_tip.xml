<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:gravity="center_vertical">

    <!-- Icon -->
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_light_blue">

        <ImageView
            android:id="@+id/imgTipIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lightbulb_outline"
            app:tint="@color/primary_accent"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- ID PENTING: tvTipTitle -->
        <TextView
            android:id="@+id/tvTipTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Tips"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <!-- ID PENTING: tvTipDesc -->
        <TextView
            android:id="@+id/tvTipDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi tips..."
            android:textColor="#616161"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
</LinearLayout>