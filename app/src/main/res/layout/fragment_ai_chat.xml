<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".ui.ai.AiChatFragment">

    <!-- Header Chat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back_chat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/black"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_robot"
            app:tint="@color/primary_accent"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EnerTrack Assistant"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- === DROPDOWN MATERIAL DESIGN (PILIH SAJA) === -->
    <!-- Style ini yang bikin kotak garis tepi (Outline) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_device_select"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:hint="Pilih Perangkat">

        <!-- inputType="none" -> Biar keyboard GAK MUNCUL (Cuma bisa pilih) -->
        <!-- dropDownHeight="250dp" -> Biar listnya PENDEK (Scrollable) -->
        <AutoCompleteTextView
            android:id="@+id/dropdown_device_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:padding="12dp"
            android:textSize="14sp"
            android:text="Pilih Perangkat (Umum)"
            android:dropDownHeight="250dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Area Chat -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false"/>

    <!-- Chips (Tombol Cepat) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="12dp"
        android:paddingBottom="8dp"
        android:background="#F9FAFB">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_prompts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_boros"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¸ Apakah ini boros?"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tips"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Tips Hemat"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cost"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Estimasi Biaya"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Input Area (Ketik Pesan) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_chat_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tanya spesifik..."
            android:background="@drawable/bg_rounded_gray"
            android:padding="12dp"
            android:textSize="14sp"
            android:maxLines="3"/>

        <ImageButton
            android:id="@+id/btn_send_chat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send"
            app:tint="@color/primary_accent"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>